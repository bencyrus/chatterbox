api.glovee.io {
    # Attach request UUID to both response and upstream
    header X-Request-ID {http.request.uuid}
    reverse_proxy gateway:8080 {
        header_up X-Request-ID {http.request.uuid}
    }

    log {
        output stdout
        format filter {
            wrap json
            fields {
                request>id replace {http.request.uuid}
            }
        }
    }
}
