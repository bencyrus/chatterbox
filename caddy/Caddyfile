api.glovee.io {
    reverse_proxy postgrest:3000
    
    log {
        output stdout
        format filter {
            wrap json
            fields {
                ts time
                request_method http.request.method
                request_uri http.request.uri
                request_body http.request.body
                response_status http.response.status
                response_body http.response.body
            }
        }
    }
}